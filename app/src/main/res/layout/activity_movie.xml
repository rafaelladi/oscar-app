<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        tools:context=".MovieActivity">
    <TextView android:id="@+id/movieName"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Movie name"
              android:textSize="34sp"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
    />
    <ImageView
            android:layout_width="256dp"
            android:layout_height="256dp" app:srcCompat="@drawable/willsmithtapa"
            android:id="@+id/moviePoster"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/movieName"
            android:layout_marginTop="8dp"/>
    <TextView
            android:text="Genre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/movieGenre"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/moviePoster"
            android:layout_marginTop="8dp" android:textAlignment="textEnd"
            app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:text="Votar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/voteButton"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/movieGenre"
            app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>